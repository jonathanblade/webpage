---
import ContactLink from "./ContactLink.astro";

import { CONTACTS } from '../data.js';

const contacts = Object.entries(CONTACTS);
---

<footer class="flex items-center justify-center">
  <ul class="flex">
    {contacts.map(([text, href]) =>
    <!-- prettier-ignore -->
    <ContactLink href={href} text={text} />
    )}
  </ul>
</footer>
