---
import ContactLink from "./ContactLink.astro";

import { CONTACTS } from '../data.js';

const contacts = Object.entries(CONTACTS);
---

<footer class="flex items-center justify-center border-t border-gray-200 dark:border-gray-700">
  <ul class="flex text-xs font-semibold">
    {contacts.map(([text, href]) =>
    <!-- prettier-ignore -->
    <li><ContactLink href={href} text={text} /></li>
    )}
  </ul>
</footer>
